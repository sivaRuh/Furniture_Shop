<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <!--<welcome-file>welcomepage.jsp</welcome-file>-->
    </welcome-file-list>
    <servlet>
        <servlet-name>LoadProductMgtHomeServlet</servlet-name>
        <servlet-class>productmgt.servlet.LoadProductMgtHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>productmgt.servlet.SearchProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadSubCategoriesToCategoryServlet</servlet-name>
        <servlet-class>productmgt.servlet.LoadSubCategoriesToCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>productmgt.servlet.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadCustomerMgtHome</servlet-name>
        <servlet-class>customermgt.servlet.LoadCustomerMgtHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchCustomerServlet</servlet-name>
        <servlet-class>customermgt.servlet.SearchCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCustomerServlet</servlet-name>
        <servlet-class>customermgt.servlet.ViewCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockCustomerServlet</servlet-name>
        <servlet-class>customermgt.servlet.BlockCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateLoginServlet</servlet-name>
        <servlet-class>login.servlet.ValidateLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadProductMgtHomeServlet</servlet-name>
        <url-pattern>/LoadProductMgtHomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/SearchProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadSubCategoriesToCategoryServlet</servlet-name>
        <url-pattern>/LoadSubCategoriesToCategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/DeleteProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadCustomerMgtHome</servlet-name>
        <url-pattern>/LoadCustomerMgtHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchCustomerServlet</servlet-name>
        <url-pattern>/SearchCustomerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCustomerServlet</servlet-name>
        <url-pattern>/ViewCustomerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockCustomerServlet</servlet-name>
        <url-pattern>/BlockCustomerServlet</url-pattern>

    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateLoginServlet</servlet-name>
        <url-pattern>/ValidateLoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
